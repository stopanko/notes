$('.note_item').removeClass('note_in_edit_now');
$('.note_item#new_note[data-note-id]').remove();
$('.note_item#new_note:not([data-note-id])').remove();
if(CKEDITOR.instances['note_body']){
    CKEDITOR.instances['note_body'].destroy();
}

if($('#add_note').hasClass('glyphicon-plus')){
    $('#notes_panel').prepend('<%=j render partial: 'notes/new_note_form', object: @note, as: :note%>')
}

$('#add_note').toggleClass('glyphicon-remove');
$('#add_note').toggleClass('glyphicon-plus');